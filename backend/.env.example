# Google Gemini API Key
GOOGLE_API_KEY="YOUR_GOOGLE_API_KEY"

# LLM Model Configuration
GEMINI_MODEL="gemini-2.5-flash"

# Optional: Tavily Search API Key (for web search tool)
TAVILY_API_KEY="YOUR_TAVILY_API_KEY"

# Google Cloud Credentials for dedicated STT/TTS
# This should be the path to your service account JSON file.
GOOGLE_APPLICATION_CREDENTIALS="/path/to/your/google-credentials.json"

# Redis URL for session storage
# Default is redis://localhost:6379
REDIS_URL="redis://localhost:6379"
# MongoDB Connection Details
MONGO_URI="YOUR_MONGODB_CONNECTION_STRING_HERE"
MONGO_DB_NAME="okada_leasing_agent"

# Google Calendar Credentials
# This must be the FULL path to your service account JSON file
GOOGLE_CALENDAR_CREDENTIALS_PATH="path/to/your/credentials.json"
